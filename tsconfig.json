{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDirs": ["./src", "./tests"], 
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
}
